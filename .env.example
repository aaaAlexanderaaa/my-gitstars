# App
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000
REACT_APP_API_URL=http://localhost:4000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gitstars
# If using the bundled Postgres container: keep `DB_HOST=db` and run Compose with `--profile local-db`
# If using an external Postgres: set `DB_HOST`/`DB_PORT` to that address and run Compose without the profile
DB_HOST=db
DB_PORT=5432

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
SESSION_SECRET=your_session_secret

# Proxy (if needed)
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# Scheduler Configuration
# Interval between star sync checks (default: 3600000 = 1 hour)
SYNC_TICK_INTERVAL_MS=3600000
# Interval between version tracking checks (default: 21600000 = 6 hours)
VERSION_TRACKING_TICK_INTERVAL_MS=21600000
# Tag used to identify repos for version tracking (default: version-tracking)
VERSION_TRACKING_TAG=version-tracking
# Backoff time after a sync failure before retrying (default: 1800000 = 30 minutes)
SYNC_FAILURE_BACKOFF_MS=1800000
# Backoff time after an auth failure before retrying (default: 86400000 = 24 hours)
SYNC_AUTH_FAILURE_BACKOFF_MS=86400000
# Delay before running schedulers on startup (default: 30000 = 30 seconds)
SCHEDULER_STARTUP_DELAY_MS=30000
